<div class="container">
  <div class="row">
    <%= render 'books/info', books: @books %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <% @book.each do |book| %>
         <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <table class="table">
           <tr>
            
            <th>Title</th>
            <th><%= book.title %></th>
           </tr>
           <tr>
            <th>Opinion</th>
            <th><%= book.body %></th>
           </tr>
          </table>
         <% end %>
    </div>
  </div>
</div>


