<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-3">
          <%= render 'books/info', book: @book_new, user: @user %>
      </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

         <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                </tr>
            </thead>



            <tbody>
              <% @book.each do |book| %>
                <tr>
                    <td>
                        <%= link_to user_path(@user) do %>
                         <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                        <% end %>
                    <td><%=link_to book.title, "/books/#{book.id}" %></td>
                    <td><%= book.body %></td>
                </tr>
               <% end %>
               <%= paginate @book %>
            </tbody>

         </table>

    </div>
  </div>
</div>


