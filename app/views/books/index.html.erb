<div class="container">
   <div class="row">
     <div class="col-md-3">
      <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <table class="table">
         <tbody>
          <tr>
	        <th>name</th>
	        <th></th>
          </tr>
          <tr>
     	    <th>introduction</th>
      	  <th></th>
          </tr>
         </tbody>
        </table>
         <div class="row">
           <%= link_to  edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do  %>
            <i class="fas fa-user-cog"></i>
            <% end %>
         </div>
        <h2>New book</h2>
        <%= form_with model: @book, url:'/books', local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">

        <% end %>
     </div>
   </div>
</div>

<h2>Books</h2>
<% @book.each do |book| %>

  <p>Title</p>
  <%= book.title %>

  <p>Opinion</p>
  <%= book.body %>
<% end %>