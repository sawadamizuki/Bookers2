<div class="container">



  <div class="row">
      <div class="col-md-3">
          <%= render 'books/info', book: @book_new, user: @user %>
      </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

         <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>

           <% @book.each do |book| %>

            <tbody>
                <tr>
                    <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                    <td><%=link_to book.title, "/books/#{book.id}" %></td>
                    <td><%= book.body %></td>
                </tr>
            </tbody>
           <% end %>
         </table>

    </div>
  </div>
</div>


