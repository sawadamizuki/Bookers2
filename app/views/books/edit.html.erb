
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>

       <p id="notice"><%= flash[:notice] %></p>

       <% if @book.errors.any? %>
         <p id="error">
           <% pluralize(@book.errors.count, "error") %> error prohibited this book from being saved:
           <% @book.errors.full_messages.each do |message| %>
            <%= message %>
           <% end %>
         </p>
        <% end %>


         <p>Title</p>
         <span><%= f.text_field :title %></span>

         <p>Opinion</p>
         <span><%= f.text_area :body %></span>

　      <%= f.submit "Update Book", class: 'btn btn-success' %>

　      <p><%= link_to "Show", user_path %> | <%= link_to "Back", books_path %></p>

      <% end %>
  </div>
 </div>
</div>


