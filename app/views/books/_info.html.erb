
    <%= render 'layouts/notification' %>

     <div class="col-md-3">
      <h2>User info</h2>


        <table class="table">
         <tbody>
          <tr>
	         <th>name</th>
	         <th><%= current_user.name %></th>
          </tr>
          <tr>
     	     <th>introduction</th>
      	   <th></th>
          </tr>
         </tbody>
        </table>
         <div class="row">
           <%= link_to  edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do  %>
            <i class="fas fa-user-cog"></i>
            <% end %>
         </div>
        <h2>New book</h2>
        <%= form_with model: @book, url:'/books', local:true do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>


          <input type="submit" value="Create Book" class="btn btn-success" >

        <% end %>
     </div>