<div class="container">
  <div class="row">
    <%= render 'books/info', book: @book_new, user: @book.user %>
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
           <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><br>
              <%= link_to current_user.name, user_path(current_user)  %>
           </td>
           <td><%= @book.title %></td>
           <td><%= @book.body %></td>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success' %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "消しますか？"} %>

            </td>
          </tr>
      </tbody></table>
    </div>
  </div>
</div>
