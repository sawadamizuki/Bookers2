<div class="container">
  <div class="row">
    <%= render 'books/info', book: @book_new, user: current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

           <table class="table">
              <thead>
                 <tr>
                  <th>Image</th>
                  <th>name</th>
                  <th></th>
                 </tr>
              </thead>

              <% @user.each do |user| %>

                <tbody>
                  <tr>
                      <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
                      <td><%= user.name %></td>
                      <td><%= link_to "Show", user_path(user) %></td>
                  </tr>
                </tbody>
              <% end %>
           </table>

    </div>
  </div>
</div>
