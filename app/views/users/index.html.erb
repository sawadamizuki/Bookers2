<div class="container">
  <div class="row">
    <%= render 'books/info', books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <% @user.each do |user| %>
           <table class="table">
              <thead>
                 <tr>
                  <th>Image</th>
                  <th>name</th>
                  <th></th>
                 </tr>
              </thead>

              <% @user.each do |user| %>

                <tbody>
                  <tr>
                      <td><%= attachment_image_tag @usre, :pofile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                      <td><%= user.name %></td>
                      <td><%= link_to "Show", user_path(@user) %></td>
                  </tr>
                </tbody>
              <% end %>
           </table>
      <% end %>
    </div>
  </div>
</div>
