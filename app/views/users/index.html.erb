<div class="container">
  <div class="row">
    <%= render 'books/info', books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @book.each do |book| %>
           <table class="table">
              <thead>
                 <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                 </tr>
              </thead>
              <tbody>
                  <tr>
                      <td></td>
                      <td><%= book.title %></td>
                      <td><%= book.body %></td>
                  </tr>
              </tbody>
           </table>

      <% end %>

    </div>
  </div>
</div>
