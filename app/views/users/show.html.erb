<div class="container">
  <div class="row">
    <%= render 'books/info', books: @books %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

         <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>



            <tbody>
                <tr>
                    <td><%= attachment_image_tag @usre, :pofile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                    <td><%=link_to book.title, "/books/#{book.id}" %></td>
                    <td><%= book.body %></td>
                </tr>
            </tbody>

         </table>

    </div>
  </div>
</div>


